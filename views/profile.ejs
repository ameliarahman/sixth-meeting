<!DOCTYPE html>
<html>
<head>
  <title>Profile</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f8f9fa;
      padding: 50px;
    }

    h1 {
      color: #333;
      text-align: center;
      margin-bottom: 30px;
    }

    ul {
      list-style-type: none;
      margin: 0;
      padding: 0;
      margin-bottom: 20px;
      background-color: #fff;
      border: 1px solid #ddd;
      border-radius: 5px;
      padding: 20px;
      color: #333;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    li {
      margin-bottom: 10px;
    }

    p {
      margin: 0;
      font-weight: bold;
    }
    .button {
    display: inline-block;
    border: none;
    background-color: #4CAF50; /* Warna latar belakang */
    color: white; /* Warna teks */
    text-align: center;
    font-size: 16px;
    padding: 10px 24px;
    cursor: pointer;
    text-decoration: none;
   }
  </style>
</head>
<body>
  <h1>Profile</h1>
  <% for (let index = 0; index < mahasiswa.length; index++) { %>
    <% const mhs = mahasiswa[index]; %>
    <ul>
      <li>
        <p>Nama: <%= mhs.name %></p>
        <p>NIM: <%= mhs.nim %></p>
        <p>Alamat: <%= mhs.address %></p>
      </li>
    </ul>
    <nav>
      <ul>
        <li><a href="/" class="button">Home</a>
        <li><a href="/mahasiswa" class="button">List mahasiswa</a></li>
      </ul>
    </nav>
  <% } %>
</body>
</html>
