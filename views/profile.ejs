<!DOCTYPE html>
<html>
<head>
  <title>Profile</title>
  <style>
    body {
      background-color: #f8f9fa;
      font-family: Arial, sans-serif;
      padding: 50px;
    }

    h1 {
      color: #333;
      text-align: center;
      margin-bottom: 30px;
    }

    ul {
      list-style-type: none;
      margin: 0;
      padding: 0;
      margin-bottom: 20px;
      background-color: #fff;
      border: 1px solid #ddd;
      border-radius: 5px;
      padding: 20px;
    }

    li {
      margin-bottom: 10px;
    }

    p {
      margin: 0;
      font-weight: bold;
    }
  </style>
</head>
<body>
  <h1>Profile</h1>
  <% for (let index = 0; index < mahasiswa.length; index++) { %>
    <% const mhs = mahasiswa[index]; %>
    <ul>
      <li>
        <p>Nama: <%= mhs.name %></p>
        <p>NIM: <%= mhs.nim %></p>
        <p>Alamat: <%= mhs.address %></p>
      </li>
    </ul>
  <% } %>
</body>
</html>
